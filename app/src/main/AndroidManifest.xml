<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.mobilemakers.wiki" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.mobilemakers.wiki.WikiActivity"
            android:label="@string/title_activity_sign_in_box"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.mobilemakers.wiki.PageListActivity"
            android:label="@string/title_activity_page_list" >
        </activity>
        <activity
            android:name="co.mobilemakers.wiki.ProjectListActivity"
            android:label="@string/app_name"
            >
        </activity>
    </application>

</manifest>
